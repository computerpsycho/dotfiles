#!/bin/bash

# Get the Mullvad VPN status
status=$(mullvad status)

# Check if the status contains the word "Connected"
if echo "$status" | grep -q "Connected"; then
    # Extract the relay information from the status
    relay=$(echo "$status" | grep -oP 'Connected to \K[^ ]+')
    echo " connected @ $relay"
else
    echo "Disabled"
fi

